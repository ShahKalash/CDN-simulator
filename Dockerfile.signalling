FROM golang:1.22-alpine AS builder
WORKDIR /src
COPY go.mod go.sum ./
RUN go mod download
COPY cmd/ cmd/
COPY internal/ internal/
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /signalling ./cmd/signalling

FROM alpine:3.20
RUN adduser -D app
USER app
WORKDIR /home/app
COPY --from=builder /signalling /usr/local/bin/signalling
ENV SIGNAL_ADDR=:7080
EXPOSE 7080
ENTRYPOINT ["signalling"]

